@model WS.ViewModel.LoginUserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>微信服务平台</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    @Styles.Render("~/Content/css")
    <style type="text/css">

         body {
             background-color: #55717F;
         }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-succuss'" style="margin-top: 25%;">
                <div class="panel-heading ">
                    <h3 class="panel-title">登录-微信服务平台</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName)

                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PassWord)

                            @Html.PasswordFor(model => model.PassWord, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PassWord)
                        </div>


                        <button type="submit" class="btn btn-success">登录</button>
                        @Html.ActionLink("注册新用户", "Register", "Users", null, new { @class = "btn btn-default pull-right " })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>
